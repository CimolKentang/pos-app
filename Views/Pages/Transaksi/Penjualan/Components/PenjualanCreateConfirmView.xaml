<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:penjualanCreateVM="clr-namespace:inovasyposmobile.ViewModels.Transaksi.Penjualan"
             xmlns:produkVM="clr-namespace:inovasyposmobile.ViewModels.Masterdata.Produk"
             xmlns:akuntansiVM="clr-namespace:inovasyposmobile.ViewModels.Akuntansi"
             xmlns:behavior="clr-namespace:inovasyposmobile.Behaviors"
             x:Class="inovasyposmobile.Views.Pages.Transaksi.Penjualan.Components.PenjualanCreateConfirmView"
             Title="Proses Penjualan">
    <Grid
        x:DataType="penjualanCreateVM:PenjualanCreateViewModel"
        RowDefinitions="*,Auto">
        <ScrollView
            Grid.Row="0"
            VerticalOptions="Start"
            Padding="10,0,10,0">
            <VerticalStackLayout>
                <CollectionView
                    InputTransparent="True"
                    ItemsSource="{Binding SelectedProduks}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate
                            x:DataType="produkVM:ProdukWithStokViewModel">
                            <Grid
                                ColumnDefinitions="*,Auto,80"
                                Padding="0,10,0,10">
                                <Grid
                                    Grid.Column="0"
                                    ColumnDefinitions="45,*"
                                    ColumnSpacing="10">
                                    <Image
                                        Grid.Column="0"
                                        IsVisible="{Binding HasImage}"
                                        Source="{Binding ProdukWithStok.Gambar}"
                                        HeightRequest="45"
                                        WidthRequest="45"
                                        Aspect="AspectFit" />
                                    <Image
                                        Grid.Column="0"
                                        IsVisible="{Binding HasNoImage}"
                                        Grid.Row="0"
                                        Source="no_image.png"
                                        HeightRequest="45"
                                        WidthRequest="45"
                                        Aspect="AspectFit" />
                                    <VerticalStackLayout
                                        Grid.Column="1"
                                        VerticalOptions="Center">
                                        <Label
                                            VerticalOptions="Center"
                                            MaxLines="1"
                                            LineBreakMode="TailTruncation"
                                            Text="{Binding ProdukWithStok.NamaProduk}" />
                                        <Label
                                            Text="{Binding ProdukWithStok.HargaJual,StringFormat='Rp. {0:N0}'}" />
                                    </VerticalStackLayout>
                                </Grid>
                                <Label
                                    Grid.Column="1"
                                    VerticalOptions="Center"
                                    Text="{Binding Count,StringFormat='x{0:N0}'}" />
                                <Label
                                    Grid.Column="2"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding Total,StringFormat='{0:N0}'}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <BoxView
                    HeightRequest="1"
                    BackgroundColor="{AppThemeBinding Dark=White,Light=Black}"
                    Margin="0,0,0,10" />

                <VerticalStackLayout
                    Spacing="10">
                    <Grid
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*">
                        <HorizontalStackLayout
                            Grid.Row="0"
                            Grid.Column="0"
                            Spacing="5">
                            <Label
                                Text="Total" />
                            <Label
                                Text="{Binding JumlahTotal, StringFormat='({0:N0} Produk)'}" />
                        </HorizontalStackLayout>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalTextAlignment="End"
                            Text="{Binding SubTotal, StringFormat='Rp {0:N0}'}" />
                    </Grid>
                    
                    <Grid
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Minimal Pembayaran" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalTextAlignment="End"
                            Text="{Binding MinimalDP, StringFormat='Rp {0:N0}'}" />
                    </Grid>

                    <Grid
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Metode Pembayaran" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalTextAlignment="End"
                            Text="{Binding Penjualan.NamaMetodePembayaran}" />
                    </Grid>
                </VerticalStackLayout>

                <BoxView 
                    HeightRequest="1"
                    BackgroundColor="{AppThemeBinding Dark=White,Light=Black}"
                    Margin="0,10,0,10" />

                <VerticalStackLayout
                    Spacing="10">
                    <CollectionView
                        IsVisible="{Binding HasJurnal}"
                        ItemsSource="{Binding Jurnals}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        
                        <CollectionView.ItemTemplate>

                            <DataTemplate
                                x:DataType="akuntansiVM:JurnalViewModel">
                                <Grid
                                    ColumnDefinitions="*,90,*"
                                    RowDefinitions="Auto">
                                    <Label
                                        Grid.Column="0"
                                        VerticalOptions="Center"
                                        MaxLines="1"
                                        LineBreakMode="TailTruncation"
                                        Text="{Binding Jurnal.NamaAkun}" />
                                    <Border
                                        Grid.Column="2"
                                        Stroke="{AppThemeBinding Dark=White,Light=Black}"
                                        StrokeShape="RoundRectangle 5">
                                        <Entry
                                            Keyboard="Numeric"
                                            VerticalOptions="Center"
                                            HorizontalTextAlignment="End"
                                            Text="{Binding Debit}">
                                            <Entry.Behaviors>
                                                <behavior:EndCursorBehavior />    
                                            </Entry.Behaviors>    
                                        </Entry>
                                    </Border>    
                                </Grid>
                            </DataTemplate>

                        </CollectionView.ItemTemplate>
                    
                    </CollectionView>

                    <Button
                        Text="Tambah Akun"
                        TextColor="{AppThemeBinding Dark=White,Light=Black}"
                        BackgroundColor="{StaticResource Primary}"
                        Command="{Binding SelectAkunDialogCommand}" />
                </VerticalStackLayout>

                <BoxView 
                    HeightRequest="1"
                    BackgroundColor="{AppThemeBinding Dark=White,Light=Black}"
                    Margin="0,10,0,0" />

                <Editor
                    HeightRequest="100"
                    Placeholder="Catatan Penjualan"
                    Text="{Binding Deskripsi}" />

                <BoxView 
                    HeightRequest="1"
                    BackgroundColor="{AppThemeBinding Dark=White,Light=Black}"
                    Margin="0,10,0,10" />

                <VerticalStackLayout
                    Spacing="10">
                    <Grid
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,90,*">
                        <Label
                            Grid.Column="0"
                            VerticalOptions="Center"
                            Text="Jumlah Bayar" />
                        <Border
                            Grid.Column="2"
                            Stroke="{AppThemeBinding Dark=White,Light=Black}"
                            StrokeShape="RoundRectangle 5">
                            <Entry
                                Keyboard="Numeric"
                                VerticalOptions="Center"
                                HorizontalTextAlignment="End"
                                Text="{Binding JumlahBayar}">
                                <Entry.Behaviors>
                                    <behavior:EndCursorBehavior />
                                </Entry.Behaviors>
                            </Entry>
                        </Border>
                    </Grid>
                    <FlexLayout
                        JustifyContent="SpaceBetween">
                        <Label
                            Text="Kembalian" />
                        <Label
                            Text="{Binding Kembalian, StringFormat='{0:N0}'}" />
                    </FlexLayout>
                    <FlexLayout
                        JustifyContent="SpaceBetween">
                        <Label
                            Text="Piutang" />
                        <Label
                            Text="{Binding SisaBayar, StringFormat='{0:N0}'}" />
                    </FlexLayout>
                </VerticalStackLayout>

                <Button
                    Margin="0,10,0,0"
                    TextColor="{AppThemeBinding Dark=White,Light=Black}"
                    BackgroundColor="{StaticResource Primary}"
                    Command="{Binding SubmitPenjualanCommand}"
                    Text="Buat Penjualan" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>