<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:inovasyposmobile.Views.Controls"
             x:Class="inovasyposmobile.Views.Controls.SwitchColumnControl"
             x:Name="SwitchControlName">
    <FlexLayout
        AlignItems="Center"
        JustifyContent="SpaceBetween">
        <Label
            x:Name="TitleComponent"
            FontAttributes="Bold" />
        <Switch
            IsToggled="{Binding Source={x:Reference Name=SwitchControlName},Path=IsToggled,Mode=TwoWay}" />
    </FlexLayout>
</ContentView>
